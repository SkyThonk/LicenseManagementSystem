@model LicenseManagement.Web.ViewModels.Tenants.TenantDetailsViewModel
@{
    ViewData["Title"] = $"Tenant - {Model.Name}";
}

<!-- Page Header -->
<div class="page-header">
    <div class="page-header-left">
        <a href="/tenants" class="btn btn-sm btn-outline mb-3">
            <i class="fas fa-arrow-left"></i> Back to Tenants
        </a>
        <h1 class="page-title">@Model.Name</h1>
        <p class="page-subtitle">@Model.Email</p>
    </div>
    <div class="page-header-right">
        <a href="/tenants/edit/@Model.Id" class="btn btn-outline">
            <i class="fas fa-edit"></i> Edit
        </a>
        @if (Model.IsActive)
        {
            <form method="post" asp-action="Deactivate" asp-route-id="@Model.Id" style="display: inline;">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-warning">
                    <i class="fas fa-ban"></i> Deactivate
                </button>
            </form>
        }
        else
        {
            <form method="post" asp-action="Activate" asp-route-id="@Model.Id" style="display: inline;">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-check"></i> Activate
                </button>
            </form>
        }
    </div>
</div>

<!-- Stats Cards -->
<div class="card-grid card-grid-3 mb-6">
    <div class="stat-card">
        <div class="stat-card-header">
            <div class="stat-card-icon primary">
                <i class="fas fa-building"></i>
            </div>
        </div>
        <div class="stat-card-value">@Model.AgencyCode</div>
        <div class="stat-card-label">Agency Code</div>
    </div>
    <div class="stat-card">
        <div class="stat-card-header">
            <div class="stat-card-icon info">
                <i class="fas fa-calendar"></i>
            </div>
        </div>
        <div class="stat-card-value">@Model.CreatedAt.ToString("MMM yyyy")</div>
        <div class="stat-card-label">Member Since</div>
    </div>
    <div class="stat-card">
        <div class="stat-card-header">
            <div class="stat-card-icon @(Model.IsActive ? "success" : "danger")">
                <i class="fas @(Model.IsActive ? "fa-check-circle" : "fa-times-circle")"></i>
            </div>
        </div>
        <div class="stat-card-value">@Model.Status</div>
        <div class="stat-card-label">Current Status</div>
    </div>
</div>

<!-- Details Row -->
<div class="row">
    <!-- Tenant Information -->
    <div class="col-lg-6 mb-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Tenant Information</h3>
            </div>
            <div class="card-body">
                <div class="info-list">
                    <div class="info-item">
                        <span class="info-label">Organization Name</span>
                        <span class="info-value">@Model.Name</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Agency Code</span>
                        <span class="info-value">@Model.AgencyCode</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Email Address</span>
                        <span class="info-value">@Model.Email</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Phone Number</span>
                        <span class="info-value">@(Model.PhoneFullNumber ?? "Not provided")</span>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="info-item">
                            <span class="info-label">Description</span>
                            <span class="info-value">@Model.Description</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <!-- Address Information -->
    <div class="col-lg-6 mb-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Address Information</h3>
            </div>
            <div class="card-body">
                <div class="info-list">
                    <div class="info-item">
                        <span class="info-label">Address Line 1</span>
                        <span class="info-value">@(Model.AddressLineOne ?? "Not provided")</span>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.AddressLineTwo))
                    {
                        <div class="info-item">
                            <span class="info-label">Address Line 2</span>
                            <span class="info-value">@Model.AddressLineTwo</span>
                        </div>
                    }
                    <div class="info-item">
                        <span class="info-label">City</span>
                        <span class="info-value">@(Model.City ?? "Not provided")</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">State</span>
                        <span class="info-value">@(Model.State ?? "Not provided")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- System Information -->
<div class="card mb-6">
    <div class="card-header">
        <h3 class="card-title">System Information</h3>
    </div>
    <div class="card-body">
        <div class="info-grid">
            <div class="info-item">
                <span class="info-label">Tenant ID</span>
                <span class="info-value font-mono">@Model.Id</span>
            </div>
            <div class="info-item">
                <span class="info-label">Status</span>
                <span class="info-value">
                    <span class="badge badge-@(Model.IsActive ? "success" : "danger")">
                        @Model.Status
                    </span>
                </span>
            </div>
            <div class="info-item">
                <span class="info-label">Created At</span>
                <span class="info-value">@Model.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</span>
            </div>
            <div class="info-item">
                <span class="info-label">Last Updated</span>
                <span class="info-value">@Model.UpdatedAt.ToString("MMMM dd, yyyy HH:mm")</span>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .page-header {
            display: flex;
            align-items: flex-start;
            justify-content: space-between;
            margin-bottom: 1.5rem;
            flex-wrap: wrap;
            gap: 1rem;
        }
        
        .page-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--gray-900);
            margin: 0;
        }
        
        .page-subtitle {
            font-size: 0.875rem;
            color: var(--gray-500);
            margin-top: 0.25rem;
        }
        
        .page-header-right {
            display: flex;
            gap: 0.5rem;
        }
        
        .mb-3 { margin-bottom: 0.75rem; }
        .mb-6 { margin-bottom: 1.5rem; }
        
        .row {
            display: flex;
            flex-wrap: wrap;
            margin: 0 -0.75rem;
        }
        
        .col-lg-6 { 
            flex: 0 0 100%; 
            max-width: 100%; 
            padding: 0 0.75rem; 
        }
        
        @@media (min-width: 1024px) {
            .col-lg-6 { 
                flex: 0 0 50%; 
                max-width: 50%; 
            }
        }
        
        .card-grid-3 {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
        }
        
        .info-list {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }
        
        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }
        
        .info-item {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            padding-bottom: 1rem;
            border-bottom: 1px solid var(--gray-100);
        }
        
        .info-list .info-item:last-child {
            border-bottom: none;
            padding-bottom: 0;
        }
        
        .info-grid .info-item {
            flex-direction: column;
            gap: 0.25rem;
            border-bottom: none;
            padding-bottom: 0;
        }
        
        .info-label {
            font-size: 0.875rem;
            color: var(--gray-500);
        }
        
        .info-value {
            font-size: 0.875rem;
            color: var(--gray-900);
            font-weight: 500;
            text-align: right;
        }
        
        .info-grid .info-value {
            text-align: left;
        }
        
        .font-mono {
            font-family: 'SF Mono', 'Consolas', monospace;
            font-size: 0.8125rem;
        }
    </style>
}
