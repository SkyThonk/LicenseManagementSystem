@model LicenseManagement.Web.ViewModels.Licenses.LicenseFormViewModel
@{
    ViewData["Title"] = Model.IsEdit ? "Edit License" : "New License";
}

<!-- Page Header -->
<div class="page-header">
    <div class="page-header-content">
        <nav class="breadcrumb">
            <a href="/licenses">Licenses</a>
            <span class="breadcrumb-separator">/</span>
            <span>@ViewData["Title"]</span>
        </nav>
        <h1 class="page-title">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <form method="post" asp-action="@(Model.IsEdit ? "Edit" : "Create")">
            @Html.AntiForgeryToken()
            @if (Model.Id.HasValue)
            {
                <input type="hidden" name="Id" value="@Model.Id" />
            }

            <!-- License Details -->
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="card-title">License Details</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="LicenseTypeId" class="form-label">
                            License Type <span class="required">*</span>
                        </label>
                        <div class="input-group">
                            <select asp-for="LicenseTypeId" class="form-select" id="licenseTypeSelect">
                                @foreach (var item in Model.LicenseTypes)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                            <button type="button" class="btn btn-secondary" onclick="openCreateLicenseTypeModal()">
                                <i class="fas fa-plus"></i> New Type
                            </button>
                        </div>
                        <span asp-validation-for="LicenseTypeId" class="form-error"></span>
                        <span class="form-hint">Select the license type for this application or create a new one.</span>
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="form-actions form-actions-right">
                <a href="@(Model.IsEdit ? $"/licenses/{Model.Id}" : "/licenses")" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                    @(Model.IsEdit ? "Update License" : "Create License")
                </button>
            </div>
        </form>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Information</h3>
            </div>
            <div class="card-body">
                <div class="help-section">
                    <h4><i class="fas fa-info-circle"></i> How it works</h4>
                    <p>Select a license type from the dropdown to create a new license application. The applicant will be automatically set to your account.</p>
                </div>
                <div class="help-section">
                    <h4><i class="fas fa-lightbulb"></i> Tips</h4>
                    <ul>
                        <li>If no license types exist, create one first</li>
                        <li>Each license type has a different fee</li>
                        <li>License will be in "Pending" status initially</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create License Type Modal -->
<div id="createLicenseTypeModal" class="license-modal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: 9999;">
    <div class="license-modal-backdrop" onclick="closeCreateLicenseTypeModal()" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.5);"></div>
    <div class="license-modal-dialog" style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 90%; max-width: 500px; z-index: 10000;">
        <div class="license-modal-content" style="background: white; border-radius: 0.5rem; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);">
            <div class="license-modal-header" style="display: flex; align-items: center; justify-content: space-between; padding: 1rem 1.5rem; border-bottom: 1px solid #e5e7eb;">
                <h3 style="font-size: 1.125rem; font-weight: 600; margin: 0;">Create License Type</h3>
                <button type="button" onclick="closeCreateLicenseTypeModal()" style="background: none; border: none; font-size: 1.25rem; color: #6b7280; cursor: pointer; padding: 0.25rem;">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="license-modal-body" style="padding: 1.5rem;">
                <form id="createLicenseTypeForm">
                    <div class="form-group">
                        <label class="form-label">Name <span class="required">*</span></label>
                        <input type="text" id="licenseTypeName" class="form-control" placeholder="e.g., Enterprise, Professional, Basic" required maxlength="200" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Description</label>
                        <textarea id="licenseTypeDescription" class="form-control" rows="3" placeholder="Describe this license type..." maxlength="500"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Fee Amount <span class="required">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="number" id="licenseTypeFee" class="form-control" placeholder="0.00" required min="0" step="0.01" />
                        </div>
                    </div>
                </form>
                <div id="licenseTypeError" class="alert alert-danger" style="display: none;"></div>
            </div>
            <div class="license-modal-footer" style="display: flex; justify-content: flex-end; gap: 0.75rem; padding: 1rem 1.5rem; border-top: 1px solid #e5e7eb;">
                <button type="button" class="btn btn-secondary" onclick="closeCreateLicenseTypeModal()">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="createLicenseType()" id="createLicenseTypeBtn">
                    <i class="fas fa-plus"></i> Create
                </button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .row {
            display: flex;
            flex-wrap: wrap;
            margin: 0 -0.75rem;
        }
        
        .col-lg-4, .col-lg-8 { padding: 0 0.75rem; flex: 0 0 100%; max-width: 100%; }
        
        @@media (min-width: 1024px) {
            .col-lg-4 { flex: 0 0 33.333%; max-width: 33.333%; }
            .col-lg-8 { flex: 0 0 66.666%; max-width: 66.666%; }
        }
        
        .mb-4 { margin-bottom: 1rem; }
        
        .input-group {
            display: flex;
            gap: 0.5rem;
        }
        
        .input-group .form-select,
        .input-group .form-control {
            flex: 1;
        }
        
        .input-group-text {
            display: flex;
            align-items: center;
            padding: 0 0.75rem;
            background: var(--gray-100);
            border: 1px solid var(--gray-300);
            border-radius: 0.375rem;
            font-weight: 500;
        }
        
        .help-section {
            margin-bottom: 1.5rem;
        }
        
        .help-section:last-child {
            margin-bottom: 0;
        }
        
        .help-section h4 {
            font-size: 0.875rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .help-section p {
            font-size: 0.875rem;
            color: var(--gray-600);
            margin: 0;
        }
        
        .help-section ul {
            margin: 0;
            padding-left: 1.5rem;
            font-size: 0.875rem;
            color: var(--gray-600);
        }
        
        .help-section li {
            margin-bottom: 0.25rem;
        }
        
        .alert {
            padding: 0.75rem 1rem;
            border-radius: 0.375rem;
            margin-top: 1rem;
        }
        
        .alert-danger {
            background: #fef2f2;
            color: #dc2626;
            border: 1px solid #fecaca;
        }
    </style>
}

@section Scripts {
    <script>
        function openCreateLicenseTypeModal() {
            document.getElementById('createLicenseTypeModal').style.display = 'block';
            document.getElementById('licenseTypeName').focus();
        }
        
        function closeCreateLicenseTypeModal() {
            document.getElementById('createLicenseTypeModal').style.display = 'none';
            document.getElementById('createLicenseTypeForm').reset();
            document.getElementById('licenseTypeError').style.display = 'none';
        }
        
        async function createLicenseType() {
            const name = document.getElementById('licenseTypeName').value.trim();
            const description = document.getElementById('licenseTypeDescription').value.trim();
            const feeAmount = parseFloat(document.getElementById('licenseTypeFee').value) || 0;
            const errorDiv = document.getElementById('licenseTypeError');
            const createBtn = document.getElementById('createLicenseTypeBtn');
            
            if (!name) {
                errorDiv.textContent = 'Name is required';
                errorDiv.style.display = 'block';
                return;
            }
            
            if (feeAmount < 0) {
                errorDiv.textContent = 'Fee must be a positive number';
                errorDiv.style.display = 'block';
                return;
            }
            
            createBtn.disabled = true;
            createBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Creating...';
            
            try {
                const response = await fetch('/licenses/types/create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        name: name,
                        description: description || null,
                        feeAmount: feeAmount
                    })
                });
                
                const result = await response.json();
                
                if (response.ok && result.success) {
                    closeCreateLicenseTypeModal();
                    // Refresh the license types dropdown
                    await refreshLicenseTypes();
                    // Show success message
                    alert('License type created successfully!');
                } else {
                    errorDiv.textContent = result.message || 'Failed to create license type';
                    errorDiv.style.display = 'block';
                }
            } catch (error) {
                console.error('Error:', error);
                errorDiv.textContent = 'An error occurred. Please try again.';
                errorDiv.style.display = 'block';
            } finally {
                createBtn.disabled = false;
                createBtn.innerHTML = '<i class="fas fa-plus"></i> Create';
            }
        }
        
        async function refreshLicenseTypes() {
            try {
                const response = await fetch('/licenses/types');
                const licenseTypes = await response.json();
                
                const select = document.getElementById('licenseTypeSelect');
                const currentValue = select.value;
                
                // Clear and rebuild options
                select.innerHTML = '<option value="">Select license type</option>';
                
                licenseTypes.forEach(lt => {
                    const option = document.createElement('option');
                    option.value = lt.id;
                    option.textContent = `${lt.name} ($${lt.feeAmount.toFixed(2)})`;
                    select.appendChild(option);
                });
                
                // Restore selection if still exists, or select the last added one
                if (licenseTypes.length > 0) {
                    if (currentValue && select.querySelector(`option[value="${currentValue}"]`)) {
                        select.value = currentValue;
                    } else {
                        // Select the last one (newly created)
                        select.value = licenseTypes[licenseTypes.length - 1].id;
                    }
                }
            } catch (error) {
                console.error('Error refreshing license types:', error);
            }
        }
        
        // Close modal on Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeCreateLicenseTypeModal();
            }
        });
    </script>
}
